<UserControl x:Class="TimeEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PicSorterNS"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="100">
    <StackPanel Orientation="Horizontal" Loaded="StackPanel_Loaded">
        <TextBox Name="uiHour" Text="00" ToolTip="Godzina (0-23)" Width="20" PreviewTextInput="uiHour_PreviewTextInput"/>
        <TextBlock Text=" : " />
        <TextBox Name="uiMin" Text="00" ToolTip="Minuty (0-59)" Width="20" PreviewTextInput="uiMin_PreviewTextInput"/>
        <TextBlock Name="uiSepMinSec"  Text=" : " />
        <TextBox Name="uiSec" Text="00" ToolTip="Sekundy (0-59)" Width="20" PreviewTextInput="uiSec_PreviewTextInput"/>
    </StackPanel>
</UserControl>
