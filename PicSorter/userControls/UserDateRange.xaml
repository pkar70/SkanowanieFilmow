<UserControl x:Class="UserDateRange"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PicSorterNS"
             mc:Ignorable="d"
             d:DesignHeight="110" d:DesignWidth="200" Loaded="UserControl_Loaded">
    <StackPanel>
        <CheckBox Content="Data min:" IsChecked="True" Name="uiUseMin" />
        <DatePicker Name="uiDateMin" SelectedDateChanged="uiDate_SelectedDateChanged"/>
        <TextBox Name="uiDateRange"  TextChanged="uiDateRange_TextChanged"/>
        <CheckBox Content="Data max:" IsChecked="True" Name="uiUseMax" />
        <DatePicker Name="uiDateMax" SelectedDateChanged="uiDate_SelectedDateChanged" />
    </StackPanel>
</UserControl>
