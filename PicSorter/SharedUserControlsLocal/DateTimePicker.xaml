<UserControl x:Class="DateTimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PicSorterNS"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Name="uiHeader" Visibility="Collapsed" />
        <StackPanel Orientation="Horizontal" Grid.Row="1" Name="uiStack">
            <DatePicker Name="uiData" Width="Auto" />
            <local:TimeEntry x:Name="uiCzas" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
