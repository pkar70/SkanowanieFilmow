<Page x:Class="SettingsRare"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PicSorterNS"
      mc:Ignorable="d" 
      Title="Miscellaneous " >
    <Grid>
        <StackPanel Width="170">
            <TextBlock HorizontalAlignment="Center" Text="" Name="uiVersion"/>
            <Button Content="Global settings" Margin="5,10,5,20" FontSize="18" Click="uiGlobalSett_Click"/>

            <Button Content="Sequence checker" Margin="5,10,5,20" FontSize="18" Click="uiSequenceSett_Click"/>

            <Button Content="Autotags" Margin="5,10,5,20" FontSize="18" Click="uiAutoTagsDefs_Click" />

            <Button Content="Dir tree" Margin="5,10,5,5" FontSize="18" Click="uiDirTree_Click"/>
            <Button Content="Tag tree" Margin="5,10,5,5" FontSize="18" Click="uiKeywords_Click"/>
            <Button Content="Web autotags" Margin="5,10,5,20" FontSize="18" Click="uiWebAutoTags_Click" />

            <Button Content="Listy" Margin="5,10,5,5" FontSize="18" Click="uiListSett_Click"/>

        </StackPanel>
    </Grid>
</Page>
