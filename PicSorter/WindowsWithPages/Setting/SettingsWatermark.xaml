<Page x:Class="SettingsWatermark"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PicSorterNS"
      mc:Ignorable="d" 
      Title="Watermark" Loaded="Page_Loaded">
    <StackPanel Margin="5,5,5,5">
        <TextBlock HorizontalAlignment="Center" Text="Watermark" FontSize="14" />
        <Button Content="verify" HorizontalAlignment="Left"  Click="uiVerify_Click" />
        <Button Content="Select watermark file" Margin="0,10,0,5" Click="uiBrowse_Click" HorizontalAlignment="Left" />
        <TextBlock Text="Generate watermark:" FontWeight="Bold" />
        <TextBox MaxLength="3" Width="40" Name="uiWatermarkText1" HorizontalAlignment="Left"  />
        <TextBox MaxLength="3" Width="40" Name="uiWatermarkText2" HorizontalAlignment="Left"  />
        <Button Content="Generate!" HorizontalAlignment="Left" Click="uiGenerate_Click" Margin="0,2,0,10"/>

        <Image Name="uiImage" HorizontalAlignment="Center" Width="64" Height="64"/>

    </StackPanel>
</Page>
