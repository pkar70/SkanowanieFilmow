<Window x:Class="SimpleTargetDir"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PicSorterNS"
        mc:Ignorable="d"
        Title="Target dir" Height="90" Width="400" DataContextChanged="Window_DataContextChanged" WindowStyle="ToolWindow">
    <StackPanel Margin="5,2,5,2">
        <local:MetaWndFilename IsPinned="False" x:Name="uiPinUnpin"/>
        <TextBox Name="uiAllKeywords" HorizontalAlignment="Stretch" Margin="5,5,5,5" />
    </StackPanel>
</Window>
